secret_word1 = "Respiratory system"
guess = ""
guess_count = 0
guess_limit = 3
out_of_guesses = False

input("Student's Name: ")
print("Welcome to our Human Body Systems Game."
      " You will have 3 chances to guess all 11 body systems using the hints provided. ")
input("If you are ready to begin, Type Yes!")

print("Body System 1 hint: What body system uses the trachea, diaphragms and our lungs to take in vital oxygen and expel carbon dioxide through breathing?")

while guess != secret_word1 and not(out_of_guesses):
    if guess_count < guess_limit:
        guess = input("Enter guess: ")
        guess_count += 1
    else:
        out_of_guesses = True

if out_of_guesses:
    print("Try again Next Time")
else:
    print("Correct")

